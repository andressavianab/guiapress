<%- include ('../../partials/navbar.ejs') %>

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Edit the Category: <%= category.title %> </h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/categories/update">
                <input class="form-control" type="text" name="title" placeholder="Update the category title" value="<%= category.title %>"><br> 
                <button class="btn btn-success" name="id" value="<%= category.id %>">Update!</button> <!--the button is also sending the id to the query!!!-->
            </form>
        </div>
    </div>
</div>

